{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["dist", ".dist", "routeTree.gen.ts", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"lineWidth": 95,
			"bracketSpacing": true,
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"jsxQuoteStyle": "double",
			"arrowParentheses": "always"
		}
	}
}
